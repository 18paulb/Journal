{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["unused-imports"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 100
      }
    ],
    "no-console": "off",
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off",
    "next/no-html-link-for-pages": "off"
  }
}
